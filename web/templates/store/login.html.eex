<div class="container">
  <h2>Login</h2>

  <%= form_for @conn, store_path(@conn, :auth), [as: :login], fn f -> %>
    <div class="form-group">
      <label><%= gettext "Image Number" %></label>
      <%= text_input f, :image_nr, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit gettext("Login"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
